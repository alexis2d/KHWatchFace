<WatchFace width="450" height="450">
    <Scene>

        <ComplicationSlot
            x="175" y="5"
            width="100" height="100"
            slotId="1"
            name="right_complication" displayName="Right"
            supportedTypes="MONOCHROMATIC_IMAGE">

            <DefaultProviderPolicy
                primaryProvider="com.fitbit.FitbitMobile/com.fitbit.complications.today.TodayComplicationDataSourceService"
                primaryProviderType="MONOCHROMATIC_IMAGE"
                defaultSystemProvider="WATCH_BATTERY"
                defaultSystemProviderType="MONOCHROMATIC_IMAGE" />

            <BoundingOval x="0" y="0" width="100" height="100" outlinePadding="2" />

            <Complication type="MONOCHROMATIC_IMAGE">
                <PartImage x="12" y="17" width="75" height="75">
                    <Image resource="heart"/>
                </PartImage>

                <Condition>
                    <Expressions>
                        <Expression name="monochromatic_ambientImage">
                            <![CDATA[[COMPLICATION.MONOCHROMATIC_IMAGE] != null && [COMPLICATION.MONOCHROMATIC_IMAGE_AMBIENT] != null]]>
                        </Expression>
                        <Expression name="monochromatic_noAmbientImage">
                            <![CDATA[[COMPLICATION.MONOCHROMATIC_IMAGE] != null && [COMPLICATION.MONOCHROMATIC_IMAGE_AMBIENT] == null]]>
                        </Expression>
                    </Expressions>

                    <Compare expression="monochromatic_ambientImage">
                        <PartImage x="37" y="40" width="24" height="24" tintColor="[CONFIGURATION.themeColor.1]" alpha="0">
                            <Variant mode="AMBIENT" target="alpha" value="255" />
                            <Image resource="[COMPLICATION.MONOCHROMATIC_IMAGE_AMBIENT]" />
                        </PartImage>
                        <PartImage x="37" y="40" width="24" height="24" tintColor="[CONFIGURATION.themeColor.2]" alpha="255">
                            <Variant mode="AMBIENT" target="alpha" value="0" />
                            <Image resource="[COMPLICATION.MONOCHROMATIC_IMAGE]" />
                        </PartImage>
                    </Compare>

                    <Compare expression="monochromatic_noAmbientImage">
                        <PartImage x="37" y="40" width="24" height="24" tintColor="[CONFIGURATION.themeColor.1]" alpha="0">
                            <Variant mode="AMBIENT" target="alpha" value="255" />
                            <Image resource="[COMPLICATION.MONOCHROMATIC_IMAGE]" />
                        </PartImage>
                        <PartImage x="37" y="40" width="24" height="24" tintColor="[CONFIGURATION.themeColor.2]" alpha="255">
                            <Variant mode="AMBIENT" target="alpha" value="0" />
                            <Image resource="[COMPLICATION.MONOCHROMATIC_IMAGE]" />
                        </PartImage>
                    </Compare>
                </Condition>
            </Complication>
        </ComplicationSlot>

        <DigitalClock x="135" y="90" width="250" height="125">
            <PartText
                x="0" y="0"
                width="200" height="100">
                <Text align="CENTER">
                    <Font family="kh" size="120">
                        <Template>%s %s
                            <Parameter expression="[HOUR_0_23_Z]" />
                            <Parameter expression="[MINUTE_Z]" />
                        </Template>
                    </Font>
                </Text>
            </PartText>
        </DigitalClock>

        <Group x="325" y="130" width="125" height="250">

            <PartText
                x="0" y="0"
                width="100" height="50">
                <Text align="CENTER">
                    <Font family="kh" size="60">
                        <Template>%s
                            <Parameter expression="[DAY_OF_WEEK_S]" />
                        </Template>
                    </Font>
                </Text>
            </PartText>

            <PartText
                x="0" y="50"
                width="100" height="50">
                <Text align="CENTER">
                    <Font family="kh" size="60">
                        <Template>%s
                            <Parameter expression="[DAY_Z]" />
                        </Template>
                    </Font>
                </Text>
            </PartText>

            <PartText
                x="0" y="100"
                width="100" height="50">
                <Text align="CENTER">
                    <Font family="kh" size="60">/</Font>
                </Text>
            </PartText>

            <PartText
                x="0" y="150"
                width="100" height="50">
                <Text align="CENTER">
                    <Font family="kh" size="60">
                        <Template>%s
                            <Parameter expression="[MONTH_Z]" />
                        </Template>
                    </Font>
                </Text>
            </PartText>

        </Group>

        <Group x="220" y="340" width="150" height="50">

            <PartImage x="30" y="5" width="30" height="30">
                <Image resource="shoe" />
            </PartImage>

            <PartText
                x="70" y="0"
                width="120" height="50">
                <Text align="LEFT">
                    <Font family="kh" size="45">
                        <Template>%s
                            <Parameter expression="47754" />
                        </Template>
                    </Font>
                </Text>
            </PartText>

        </Group>

        <PartImage x="0" y="185" width="250" height="350">
            <Image resource="sora"/>
        </PartImage>

    </Scene>
</WatchFace>