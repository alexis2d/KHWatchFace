<WatchFace width="450" height="450">
    <Scene>
        <DigitalClock x="125" y="75" width="200" height="50">
            <TimeText x="0" y="0" width="200" height="75" format="hh:mm">
                <Font family="SYNC_TO_DEVICE" size="70" />
            </TimeText>
        </DigitalClock>

        <ComplicationSlot
            x="200" y="25"
            width="50" height="50"
            slotId="2"
            name="right_complication" displayName="Right"
            supportedTypes="MONOCHROMATIC_IMAGE">

            <DefaultProviderPolicy
                primaryProvider="com.fitbit.FitbitMobile/com.fitbit.complications.today.TodayComplicationDataSourceService"
                primaryProviderType="MONOCHROMATIC_IMAGE"
                defaultSystemProvider="WATCH_BATTERY"
                defaultSystemProviderType="MONOCHROMATIC_IMAGE" />

            <BoundingOval x="0" y="0" width="50" height="50" outlinePadding="2" />

            <Complication type="MONOCHROMATIC_IMAGE">
                <Group name="monochromatic_oval" x="0" y="0" width="50" height="50">

                    <!-- Cercle AMBIENT -->
                    <PartDraw x="0" y="0" width="50" height="50" alpha="0">
                        <Variant mode="AMBIENT" target="alpha" value="255" />
                        <Arc direction="CLOCKWISE" startAngle="0" endAngle="360"
                            centerX="25" centerY="25" width="46" height="46">
                            <Stroke color="[CONFIGURATION.themeColor.1]" cap="ROUND" thickness="2" />
                        </Arc>
                    </PartDraw>

                    <!-- Cercle NORMAL -->
                    <PartDraw x="0" y="0" width="50" height="50" alpha="255">
                        <Variant mode="AMBIENT" target="alpha" value="0" />
                        <Arc direction="CLOCKWISE" startAngle="0" endAngle="360"
                            centerX="25" centerY="25" width="46" height="46">
                            <Stroke color="[CONFIGURATION.themeColor.2]" cap="ROUND" thickness="2" />
                        </Arc>
                    </PartDraw>
                </Group>

                <Condition>
                    <Expressions>
                        <Expression name="monochromatic_ambientImage">
                            <![CDATA[[COMPLICATION.MONOCHROMATIC_IMAGE] != null && [COMPLICATION.MONOCHROMATIC_IMAGE_AMBIENT] != null]]>
                        </Expression>
                        <Expression name="monochromatic_noAmbientImage">
                            <![CDATA[[COMPLICATION.MONOCHROMATIC_IMAGE] != null && [COMPLICATION.MONOCHROMATIC_IMAGE_AMBIENT] == null]]>
                        </Expression>
                    </Expressions>

                    <Compare expression="monochromatic_ambientImage">
                        <PartImage x="13" y="13" width="24" height="24" tintColor="[CONFIGURATION.themeColor.1]" alpha="0">
                            <Variant mode="AMBIENT" target="alpha" value="255" />
                            <Image resource="[COMPLICATION.MONOCHROMATIC_IMAGE_AMBIENT]" />
                        </PartImage>
                        <PartImage x="13" y="13" width="24" height="24" tintColor="[CONFIGURATION.themeColor.2]" alpha="255">
                            <Variant mode="AMBIENT" target="alpha" value="0" />
                            <Image resource="[COMPLICATION.MONOCHROMATIC_IMAGE]" />
                        </PartImage>
                    </Compare>

                    <Compare expression="monochromatic_noAmbientImage">
                        <PartImage x="13" y="13" width="24" height="24" tintColor="[CONFIGURATION.themeColor.1]" alpha="0">
                            <Variant mode="AMBIENT" target="alpha" value="255" />
                            <Image resource="[COMPLICATION.MONOCHROMATIC_IMAGE]" />
                        </PartImage>
                        <PartImage x="13" y="13" width="24" height="24" tintColor="[CONFIGURATION.themeColor.2]" alpha="255">
                            <Variant mode="AMBIENT" target="alpha" value="0" />
                            <Image resource="[COMPLICATION.MONOCHROMATIC_IMAGE]" />
                        </PartImage>
                    </Compare>
                </Condition>
            </Complication>
        </ComplicationSlot>

        <Condition>
            <Expressions>
                <Expression name="is_weather_available">[WEATHER.IS_AVAILABLE]</Expression>
            </Expressions>
            <Compare expression="is_weather_available">
                <Text x="125" y="50" width="200" height="50">
                    <Font family="SYNC_TO_DEVICE" size="32">
                        <Template>Today's weather: %s
                            <Parameter expression="[WEATHER.CONDITION_NAME]"/>
                        </Template>
                    </Font>
                </Text>
            </Compare>
            <Default>
                <Text>
                    <Font family="SYNC_TO_DEVICE" size="32">
                       NOTHING
                    </Font>
                </Text>
            </Default>
        </Condition>
    </Scene>
</WatchFace>